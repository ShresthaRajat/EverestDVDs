@model IEnumerable<WebApplication1.Models.Loan>
@{
    Layout = "~/Views/Shared/Loggedin.cshtml";
}
@{
    ViewBag.Title = "Loan31Days";
}

<h4 class="page-title text-truncate text-dark font-weight-medium mb-1">Loan Table</h4>
<hr />
<div class="d-flex align-items-center">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb m-0 p-0">
            <li class="breadcrumb-item"><a href="index.html" class="text-muted">Home</a></li>
            <li class="breadcrumb-item text-muted active" aria-current="page">Loan</li>
        </ol>
    </nav>

</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Loan Filter by 31 Days</h4>
                    <hr />
                    @if (Model == null)
                    {
                <form action="/Loans/Loan31Days" method="get">
                    <div class="col-md-6 text-nowrap">
                        @Html.DropDownList("Name", new SelectList(ViewBag.MemberID, "Name", "Name"), "Select Name ", new { @class = "form-control" })

                        @*@Html.DropDownList("NoOfCopy", new SelectList(ViewBag.NoOfCopy, "NoOfCopy", "NoOfCopy"), "Select No of Copy ", new { @class = "form-control" })*@

                        @*@Html.DropDownList("LastName", new SelectList(ViewBag.LastName, "LastName", "LastName"), "Select Last Name", new { @class = "form-control" })*@
                        <button type="submit" class="btn-primary"> Sort </button>
                        <hr />
                    </div>
                    @*<button type="submit"> SUBMIT </button>*@
                </form>
                    }
                    else
                    {
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.DVDDetails.Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DVDDetails.DVDId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Members.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IssuedDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ReturnedDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TotalFine)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DVDDetails.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Members.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IssuedDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ReturnedDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TotalFine)
                                    </td>

                                </tr>
                            }


                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
</div>
