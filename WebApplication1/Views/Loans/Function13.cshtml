                                    <td>
                                        <img src="@Url.Content(item.dVDDetail.DVDCoverPath)" width="150" height="150" />
                                    </td>
                                    <td>
                                        @item.dVDDetail.Title

                                    </td>
                                    <td>
                                        @item.loan.IssuedDate

                                    </td>
                                    <td>
                                        @Html.Label("", DateTime.Now.Subtract(item.loan.IssuedDate).Days.ToString())

                                    </td>
                                }
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
