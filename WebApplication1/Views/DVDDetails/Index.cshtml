<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">DVD Details Table</h4>
                    <hr />
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success btn-large" })
                    <hr />
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DVDCoverPath)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Title)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Genre)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NoOfCopy)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AgeRestriction)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.StudioName)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.DateAdded)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="@Url.Content(item.DVDCoverPath)" width="150" height="150" />
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Genre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NoOfCopy)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AgeRestriction)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StudioName)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateAdded)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.DVDId }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.DVDId }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.DVDId })
                                        </td>
                                    </tr>
                                }

                                </tbody>
</table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
