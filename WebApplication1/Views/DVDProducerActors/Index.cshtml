        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">DVD Producer Actors Table</h4>
                    <hr />
                    @*@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success btn-large" })*@
                    <hr />
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>

                                    <th>
                                        First Name
                                    </th>
                                    <th>
                                        Last Name
                                    </th>
                                    <th>
                                        DVD Title
                                    </th>
                                    <th>
                                        Producer Name
                                    </th>

                                    <th>
                                        Date Added

                                    </th>
                                </tr>

                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>

                                    <td>@item.castMember.Actors.FirstName</td>
                                    <td>@item.castMember.Actors.LastName</td>
                                    <td>@item.castMember.DVDDetails.Title</td>
                                    <td>@item.dVDProducer.Producers.ProducerName</td>
                                    <td>@item.castMember.DVDDetails.DateAdded</td>
                                    <td>@item.castMember.DVDDetails.DVDCoverPath</td>
                                </tr>

                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

