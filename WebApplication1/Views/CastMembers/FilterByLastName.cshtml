@model IEnumerable<WebApplication1.Models.CastMember>



@{
    ViewBag.Title = "FilterByLastName";
}

@*<h2>FilterByLastName</h2>*@

<h4 class="page-title text-truncate text-dark font-weight-medium mb-1">Cast Members Table</h4>
<hr />
<div class="d-flex align-items-center">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb m-0 p-0">
            <li class="breadcrumb-item"><a href="index.html" class="text-muted">Home</a></li>
            <li class="breadcrumb-item text-muted active" aria-current="page">Cast Memebers</li>
        </ol>
    </nav>

</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Select Actor's Last name to view all available DVD Titles</h4>
                    <hr />
                    @if (Model == null)
                {
                <form action="/CastMembers/FilterByLastName" method="get">
                    <div class="col-md-6 text-nowrap">
                        @Html.DropDownList("LastName", new SelectList(ViewBag.LastName, "LastName", "LastName"), "Select Last Name", new { @class = "form-control" })
                        <button type="submit" class="btn-primary"> Sort </button>
                        <hr />
                    </div>
                    @*@Html.DropDownList("LastName", new SelectList(ViewBag.LastName, "LastName", "LastName"), null, null);
        <button type="submit"> SUBMIT </button>*@
                </form>
                }
                else
                {
                <form action="/CastMembers/FilterByLastName" method="get">
                    <div class="col-md-6 text-nowrap">
                        @Html.DropDownList("LastName", new SelectList(ViewBag.LastName, "LastName", "LastName"), "Select Last Name", new { @class = "form-control" })
                        <button type="submit" class="btn-primary"> Sort </button>
                        @*<div id="dataTable_length" class="dataTables_length" aria-controls="dataTable"><label>Sort By:&nbsp;<select class="form-control form-control-sm custom-select custom-select-sm">("LastName", new SelectList(ViewBag.LastName, "LastName", "LastName")<option value="10" selected="">10</option><option value="25">25</option><option value="50">50</option><option value="100">100</option></select>&nbsp;</label></div>*@
                    </div>
                    <br />
                    <br />
                    @*@Html.DropDownList("LastName", new SelectList(ViewBag.LastName, "LastName", "LastName"), null, null);
        <button type="submit"> SUBMIT </button>*@
                </form>

                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Actors.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DVDDetails.Title)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Actors.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Actors.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DVDDetails.Title)
                                </td>
                              
                            </tr>
                        }

                    </table>
                }
                </div>
                </div>
            </div>
        </div>
    </div>
</div>


